# Prisma configurations
DATABASE_URL="postgresql://<username>:<password>@<host>:<port>/<database>?connect_timeout=300" # Get these from your Supabase project's Database settings
DIRECT_URL="postgresql://<username>:<password>@<host>:<port>/<database>?connect_timeout=300"  # Same as above

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://<your-project-ref>.supabase.co                # Found in Supabase dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_ANON_KEY=<your-anon-key>                                  # Found in Supabase dashboard → Project Settings → API → "Project API keys"
SUPABASE_SERVICE_ROLE_KEY=<your-service-role-key>                              # Also in "Project API keys" (DO NOT expose this key on frontend)

# Auth configurations
AUTH_URL=http://localhost:3000                                                 # This is usually your frontend URL (change in production)
AUTH_SECRET=<your-random-secret-key>                                           # Generate using: `openssl rand -hex 32`

NEXT_PUBLIC_APP_URL=http://localhost:3000                                      # Your app's base URL (public)

GOOGLE_CLIENT_ID=<your-google-client-id>                                       # Get from Google Cloud Console → OAuth 2.0 credentials
GOOGLE_CLIENT_SECRET=<your-google-client-secret>                               # Same as above

GITHUB_CLIENT_ID=<your-github-client-id>                                       # Get from GitHub → Developer settings → OAuth Apps
GITHUB_CLIENT_SECRET=<your-github-client-secret>                               # Same as above

# Gemini configuration
GEMINI_API_KEY=<your-gemini-api-key>                                           # Get from https://makersuite.google.com/app/apikey

# Resend configurations
RESEND_API_KEY=<your-resend-api-key>                                           # Get from https://resend.com/api-keys
